<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bgr"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textColor="#343434"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text1"
        android:layout_below="@id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your details below"
        android:textColor="#B3343434"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/elabel"
        android:layout_below="@id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#B3343434"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:gravity="left"/>

    <EditText
        android:id="@+id/email"
        android:layout_below="@id/elabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittextfield"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:hint="Enter your email"
        android:padding="20dp"
        android:textSize="14sp"
        android:textColor="#C1C1C1"
        android:textColorHint="#C1C1C1" />

    <TextView
        android:id="@+id/plabel"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#B3343434"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:gravity="left"/>

    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_below="@id/plabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittextfield"
        android:drawableLeft="@drawable/password_icon"
        android:drawableRight="@drawable/eye_icon"
        android:drawablePadding="10dp"
        android:hint="Your Password"
        android:padding="20dp"
        android:textColor="#C1C1C1"
        android:textColorHint="#C1C1C1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/forgot"
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#A1A1A1"
        android:textSize="14sp"
        android:layout_marginRight="20dp"
        android:gravity="right"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbtn"
        android:layout_below="@id/forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#2E3234"
        android:textSize="16sp"
        android:text="Sign In" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/others"
        android:layout_below="@id/loginbtn"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="#B3343434"
        android:text="Or continue with"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/google"
        android:layout_below="@id/others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#2E3234"
        android:drawableLeft="@drawable/google_icon"
        android:backgroundTint="#FFFFFF"
        android:text="Sign in with Google" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/apple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/google"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/apple_icon"
        android:text="Sign in with Apple"
        android:textColor="#2E3234" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/apple"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:gravity="center|bottom">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donâ€™t Have Any Account?"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="#B3343434"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>


</RelativeLayout>